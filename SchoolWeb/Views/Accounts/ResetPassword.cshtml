@model SchoolWeb.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<br>
<br>
<h3 class="text-center">Reset Password</h3>
<br>
<br>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <input type="hidden" asp-for="Token" />
            <div class="form-group">
                <label asp-for="UserName">Email</label>
                <input asp-for="UserName" class="form-control bg-light" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">New password</label>
                <input asp-for="Password" type="password" class="form-control bg-light" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Confirm">Confirm</label>
                <input asp-for="Confirm" type="password" class="form-control bg-light" />
                <span asp-validation-for="Confirm" class="text-danger small"></span>
            </div>
            <br>
            <div class="form-group text-center">
                <input type="submit" value="Reset Password" class="btn btn-secondary" />
            </div>
            <div class="text-danger text-center mr-4" asp-validation-summary="ModelOnly"></div>
        </form>
        <div class="text-danger text-center">
            <p>
                @Html.Raw(ViewBag.Message)
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
