@model SchoolWeb.Models.Configurations.ConfigurationsViewModel
@{
    ViewData["Title"] = "Configuration";
}

<br>
<br>
<h3 class="text-center">Configuration</h3>
<br>
<br>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="ClassMaxStudents">Class Max Students</label>
                <input asp-for="ClassMaxStudents" class="form-control bg-light" />
                <span asp-validation-for="ClassMaxStudents" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPercentageAbsence">Max Percentage Absence</label>
                <input asp-for="MaxPercentageAbsence" class="form-control bg-light" />
                <span asp-validation-for="MaxPercentageAbsence" class="text-danger small"></span>
            </div>
            <br>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-secondary" />
            </div>
            <div class="text-danger text-center mr-4" asp-validation-summary="ModelOnly"></div>
        </form>
    </div>
</div>
<br>
<div class="text-success text-center">
    <p>
        @Html.Raw(ViewBag.Message)
    </p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
