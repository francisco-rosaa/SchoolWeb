@model SchoolWeb.Models.Home.HomeCourseDisciplinesViewModel
@{
    ViewData["Title"] = "Home";
    <style type="text/css" media="screen">
        .table-hover tbody tr:hover td {
            background-color: #f5f3e3;
        }
    </style>
}

<br>
<div>
    <img src="~/images/banner-welcome2.jpg" alt="Image" class="embed-responsive" />
</div>
<br>
<div>
    <img src="~/images/banner-disciplines.jpg" alt="Image" class="embed-responsive" />
</div>
<br>
<div class="row">
    <div class="col-md-12">
        <div class="row justify-content-center">
            <div class="col-auto">
                <table class="table table-hover table-responsive table-borderless" id="HomeCourses">
                    <thead>
                        <tr>
                            <th>
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Disciplines.FirstOrDefault().Area)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Disciplines.FirstOrDefault().Duration)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Disciplines != null)
                        {
                            @foreach (var item in Model.Disciplines)
                            {
                                <tr>
                                    <td class="align-middle font-weight-bold">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.Area)
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.Duration)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <br>
        <div class="col-md-2 offset-md-5 nav-item text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
<br>
<br>
